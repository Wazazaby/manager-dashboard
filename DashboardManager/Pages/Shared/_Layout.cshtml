<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Commerciaux</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"/>
</head>
<body>
    <div class="container-fluid h-100">
        <div class="row h-100">
            <nav class="col-10 col-md-2 p-0 bg-dark naviBar">
                <div class="navbar navbar-expand navbar-dark bg-dark flex-md-column flex-row align-items-start p-0">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">Madera</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse menuNav">
                        <ul class="flex-md-column flex-row navbar-nav w-100 justify-content-between">
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Commercials/Index"><i class="fas fa-users"></i> Commerciaux</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Clients/Index"><i class="fas fa-user-tag"></i> Clients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-page="/Departments/Index"><i class="fas fa-map-marker-alt"></i> Departements</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <main class="col mh-100 mt-5">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Madera Concept - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>


<style>

    .naviBar {
        min-height: 100vh;
    }

    .navbar-brand{
        margin: auto;
        font-size: 55px;
        font-weight: 500;
    }

    .nav-item{
        padding: .5em;
    }

    li {
        border-bottom: 1px solid grey;
    }

    .nav-link {
        padding-left: 2em!important;
    }

    .menuNav{
        min-width: 100%;
    }


</style>
