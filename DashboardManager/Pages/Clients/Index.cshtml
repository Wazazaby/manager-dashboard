@page
@model DashboardManager.Pages.Clients.IndexModel

@{
    ViewData["Title"] = "Clients";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-success" asp-page="Create">Ajouter <i class="fas fa-plus"></i></a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client[0].Departement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Client)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.Label(String.Format("{0} ({1})", item.Departement.Name, item.Departement.Code))
                </td>
                <td>
                    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                    <a class="btn btn-success" asp-page="./Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                    <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
